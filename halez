    <title>Elo Chess.com</title>
    <style>
        body {
            background: transparent; 
            font-family: 'Arial', sans-serif;
            color: #000000; 
            font-weight: 34000; 
            text-align: center;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #elo-container {
            display: flex;
            gap: 30px;
            background: transparent;
            padding: 5px 5px;
            border-radius: 15px;
            font-size: 30px;
            font-weight: 500;
            color: #000000;
            
        }

        .elo {
            padding: 5px 10px;
            background: #ffffff;
            border-radius: 10px;
            transition: transform 0.3s ease;
            
        }

        .elo:hover {
            transform: scale(1.05);
        }

        .change {
            font-size: 25px;
            font-weight: 600;
            margin-top: 5px;
            
        }

        .positive { color: #15ff00; } 
        .negative { color: #ff0000; }  
        .neutral  { color: #000000; }  
    </style>
